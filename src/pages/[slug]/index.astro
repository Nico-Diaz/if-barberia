---
// src/pages/[slug]/index.astro
import Layout from '../../layouts/Layout.astro';
import BookingSection from '../../components/BookingSection.astro';
import { createClient } from '@supabase/supabase-js';

// --- CAMBIO IMPORTANTE: ELIMINÉ getStaticPaths ---
// Al borrarlo, activamos el modo SSR (Server Side Rendering).
// Esto significa que si agregas un barbero a Supabase, 
// su página funcionará inmediatamente sin redeploy.

// 1. OBTENER DATOS EN TIEMPO REAL
const { slug } = Astro.params;

// Validar que exista el slug
if (!slug) return Astro.redirect('/404');

const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL, 
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY // O _KEY, según tu .env
);

// Buscamos el negocio
const { data: negocio } = await supabase.from('negocios').select('*').eq('slug', slug).single();

// Si no existe el negocio, mandamos a error 404
if (!negocio) return Astro.redirect('/404');

// Buscamos sus servicios y profesionales
const { data: servicios } = await supabase.from('servicios').select('*').eq('negocio_id', negocio.id).order('precio');
const { data: profesionales } = await supabase.from('profesionales').select('*').eq('negocio_id', negocio.id);
---

<Layout title={`Reserva en ${negocio.nombre}`}>
    <main class="app-wrapper" style={`--primary: ${negocio.color_primario || '#1E3A8A'};`}>
        
        <div class="brand-header">
            <h1>{negocio.nombre}</h1>
            
            <div class="bar-decorator" style={`
                --deco-primary: ${negocio.color_primario || '#1E3A8A'};
                --deco-secondary: ${negocio.color_secundario || '#D92525'};
            `}></div>
            
            <p>Reserva tu lugar exclusivo</p>
        </div>
        
        <BookingSection 
            negocio={negocio} 
            servicios={servicios || []} 
            profesionales={profesionales || []} 
        />
        
        <footer class="mini-footer"><p>© 2026 {negocio.nombre}</p></footer>
    </main>
</Layout>

<style is:global>
    /* VARIABLES POR DEFECTO (Fallback) */
    :root {
        --barber-red: #D92525;
        --barber-blue: #1E3A8A;
        --barber-white: #ffffff;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #0f172a;
        
        /* FONDO GENERAL EN EL BODY */
        background-image: linear-gradient(
            45deg,
            rgba(217, 37, 37, 0.05) 25%, 
            transparent 25%,
            transparent 50%,
            rgba(30, 58, 138, 0.05) 50%, 
            rgba(30, 58, 138, 0.05) 75%,
            transparent 75%,
            transparent
        );
        background-size: 100px 100px;
        min-height: 100vh;
        width: 100%;
    }

    /* CONTENEDOR PRINCIPAL */
    .app-wrapper { 
        min-height: 100vh; 
        width: 100%; 
        max-width: 100vw;
        display: flex; flex-direction: column; align-items: center; justify-content: center;
        padding: 20px 10px; 
        box-sizing: border-box;
    }
    
    /* HEADER / MARCA */
    .brand-header { text-align: center; margin-bottom: 30px; width: 100%; }
    
    .brand-header h1 { 
        font-family: system-ui, sans-serif; 
        font-size: 3.5rem; 
        letter-spacing: 2px; margin: 0; line-height: 1; 
        color: white; font-weight: 900; text-transform: uppercase; 
    }
    
    /* BARRA DECORATIVA TRICOLOR */
    .bar-decorator {
        height: 12px; width: 100px; margin: 20px auto; border-radius: 6px; border: 2px solid white;
        /* Usamos variables locales para permitir personalización si quisieras */
        background: repeating-linear-gradient(
            45deg, 
            var(--deco-secondary, var(--barber-red)), 
            var(--deco-secondary, var(--barber-red)) 15px, 
            var(--barber-white) 15px, 
            var(--barber-white) 30px, 
            var(--deco-primary, var(--barber-blue)) 30px, 
            var(--deco-primary, var(--barber-blue)) 45px, 
            var(--barber-white) 45px, 
            var(--barber-white) 60px
        );
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .brand-header p { color: rgba(255,255,255,0.8); letter-spacing: 1px; margin-top: 10px; }
    .mini-footer { margin-top: 3rem; color: rgba(255,255,255,0.3); font-size: 0.8rem; text-align: center; }

    /* RESPONSIVE */
    @media (max-width: 600px) {
        .brand-header h1 { font-size: 2.2rem; }
        .app-wrapper { justify-content: flex-start; padding-top: 40px; }
    }
</style>