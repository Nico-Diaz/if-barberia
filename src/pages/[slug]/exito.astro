---
// src/pages/[slug]/exito.astro
import Layout from '../../layouts/Layout.astro';
import { createClient } from '@supabase/supabase-js';

const { slug } = Astro.params;

if (!slug) return Astro.redirect('/404');

const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY
);

const { data: negocio } = await supabase.from('negocios').select('*').eq('slug', slug).single();

if (!negocio) return Astro.redirect('/404');

const colorP = negocio.color_primario || '#1E3A8A';
const colorS = negocio.color_secundario || '#D92525';

// --- FUNCIÃ“N HELPER: Convertir HEX a RGBA para el fondo sutil ---
const hexToRgba = (hex:string, alpha: number) => {
    let r = 0, g = 0, b = 0;
    // Manejar formato #RRGGBB
    if (hex.length === 7) {
        r = parseInt(hex.slice(1, 3), 16);
        g = parseInt(hex.slice(3, 5), 16);
        b = parseInt(hex.slice(5, 7), 16);
    }
    return `rgba(${r}, ${g}, ${b}, ${alpha})`;
};

// Creamos el color de las rayas con 5% de opacidad usando el color del negocio
const stripeColor = hexToRgba(colorS, 0.05);

const telefonoFijo = "5492613727906"; 
const mensajeWp = `Hola ${negocio.nombre}, acabo de reservar un turno.`;
const whatsappLink = `https://wa.me/${telefonoFijo}?text=${encodeURIComponent(mensajeWp)}`;
---

<Layout title="Â¡Turno Reservado!">
    <main class="layout-centro">
        
        <div class="content-clean" style={`--primary: ${colorP};`}>
            
            <div class="check-container">
                <svg viewBox="0 0 24 24" class="checkmark">
                    <path fill="none" d="M4.1 12.7L9 17.6 20.3 6.3"/>
                </svg>
            </div>

            <h1 id="saludo-cliente">Â¡Listo!</h1>
            
            <p class="mensaje-principal">
                Tu turno ha sido reservado con Ã©xito.
            </p>
            
            <p class="mensaje-secundario">
                Te esperamos en el local. Si necesitas cancelar o reprogramar, avÃ­sanos por WhatsApp.
            </p>

            <div class="botones-container">
                <a href={whatsappLink} target="_blank" class="btn-whatsapp">
                    Enviar mensaje al local ðŸ’¬
                </a>

                <a href={`/${slug}`} class="btn-volver">
                    Volver al Inicio
                </a>
            </div>
        </div>

    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const params = new URLSearchParams(window.location.search);
        const nombre = params.get('nombre');
        
        if (nombre) {
            const h1 = document.getElementById('saludo-cliente');
            if (h1) h1.innerText = `Â¡Listo, ${nombre}!`;
        }
    });
</script>

<style is:global define:vars={{ stripeColor, colorS }}>
    
    /* Reseteo agresivo para evitar bordes blancos */
    html, body {
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        min-height: 100vh;
        background-color: #0f172a; /* Fondo base oscuro */
    }

    /* PatrÃ³n de barberÃ­a aplicado a todo el body */
    body {
        background-image: 
            linear-gradient(#0f172a, #0f172a), 
            repeating-linear-gradient(
                45deg, 
                var(--stripeColor), 
                var(--stripeColor) 15px, 
                transparent 15px, 
                transparent 30px
            );
        background-attachment: fixed; /* Para que el fondo no se mueva al scrollear */
    }
</style>

<style>
    /* Layout Flex para centrar todo */
    .layout-centro {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
    }

    .content-clean {
        text-align: center;
        max-width: 450px;
        width: 100%;
        animation: popIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Checkmark */
    .check-container {
        width: 90px; height: 90px; margin: 0 auto 30px;
        background: var(--primary); 
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        box-shadow: 0 0 40px var(--primary);
    }
    .checkmark { 
        width: 45px; height: 45px; 
        stroke: white; stroke-width: 4; stroke-linecap: round; stroke-linejoin: round; 
        fill: none;
        stroke-dasharray: 100; stroke-dashoffset: 100;
        animation: draw 0.8s forwards 0.4s; 
    }

    h1 { 
        color: white; margin: 0 0 15px 0; 
        font-size: 3rem; font-weight: 900; 
        font-family: system-ui, sans-serif; 
        text-transform: capitalize; 
        text-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }
    
    .mensaje-principal { color: white; font-size: 1.3rem; margin-bottom: 10px; font-weight: 500; }
    .mensaje-secundario { color: #94a3b8; font-size: 1rem; line-height: 1.6; margin-bottom: 40px; }

    .botones-container { display: flex; flex-direction: column; gap: 15px; }

    .btn-whatsapp {
        display: flex; align-items: center; justify-content: center; gap: 10px;
        background: #22c55e; color: white; text-decoration: none;
        padding: 18px; border-radius: 12px; font-weight: bold; font-size: 1.1rem;
        transition: 0.3s; 
        box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
        border: 1px solid rgba(255,255,255,0.1);
    }
    .btn-whatsapp:hover { transform: translateY(-3px); background: #16a34a; box-shadow: 0 10px 25px rgba(34, 197, 94, 0.5); }

    .btn-volver {
        display: block; color: rgba(255,255,255,0.5); text-decoration: none;
        font-size: 0.95rem; transition: 0.2s; padding: 10px;
    }
    .btn-volver:hover { color: white; text-decoration: underline; }

    @keyframes draw { to { stroke-dashoffset: 0; } }
    @keyframes popIn { 
        from { transform: scale(0.8) translateY(20px); opacity: 0; } 
        to { transform: scale(1) translateY(0); opacity: 1; } 
    }
</style>