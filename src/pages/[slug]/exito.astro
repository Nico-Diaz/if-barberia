---
// src/pages/[slug]/exito.astro
import Layout from '../../layouts/Layout.astro';
import { createClient } from '@supabase/supabase-js';

// --- 1. ESTO ES LO QUE TE FALTABA O FALLABA ---
export async function getStaticPaths() {
  const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_KEY
  );
  
  // Buscamos TODOS los negocios para generar una pÃ¡gina de Ã©xito para cada uno
  const { data: negocios } = await supabase.from('negocios').select('slug');
  
  if (!negocios) return [];

  return negocios.map((negocio) => ({
    params: { slug: negocio.slug },
  }));
}
// ----------------------------------------------

const { slug } = Astro.params;
const supabase = createClient(import.meta.env.PUBLIC_SUPABASE_URL, import.meta.env.PUBLIC_SUPABASE_KEY);

// Obtener datos del negocio para los colores y el telÃ©fono
const { data: negocio } = await supabase.from('negocios').select('*').eq('slug', slug).single();

if (!negocio) return Astro.redirect('/404');

const colorP = negocio.color_primario;
const colorS = negocio.color_secundario || '#D92525';
const telefono = negocio.telefono_contacto || '';

// Link de WhatsApp genÃ©rico (luego el cliente puede escribir lo que quiera)
const mensajeWp = `Hola ${negocio.nombre}, acabo de reservar un turno.`;
const whatsappLink = `https://wa.me/${telefono}?text=${encodeURIComponent(mensajeWp)}`;
---

<Layout title="Â¡Turno Reservado!">
    <main class="exito-wrapper" style={`--primary: ${colorP}; --secondary: ${colorS};`}>
        
        <div class="card-exito">
            <div class="check-container">
                <svg viewBox="0 0 24 24" class="checkmark">
                    <path fill="none" d="M4.1 12.7L9 17.6 20.3 6.3"/>
                </svg>
            </div>

            <h1 id="saludo-cliente">Â¡Listo!</h1>
            
            <p class="mensaje-principal">
                Tu turno ha sido reservado con Ã©xito.
            </p>
            
            <p class="mensaje-secundario">
                Te esperamos en el local. Si necesitas cancelar o reprogramar, avÃ­sanos por WhatsApp.
            </p>

            <div class="botones-container">
                <a href={whatsappLink} target="_blank" class="btn-whatsapp">
                    Enviar mensaje al local ðŸ’¬
                </a>

                <a href={`/${slug}`} class="btn-volver">
                    Volver al Inicio
                </a>
            </div>
        </div>

    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const params = new URLSearchParams(window.location.search);
        const nombre = params.get('nombre');
        
        if (nombre) {
            const h1 = document.getElementById('saludo-cliente');
            if (h1) h1.innerText = `Â¡Listo, ${nombre}!`;
        }
    });
</script>

<style>
    /* VARIABLES (Mismos colores BarberÃ­a) */
    :root {
        --barber-red: #D92525;
        --barber-blue: #1E3A8A;
        --barber-white: #ffffff;
    }

    .exito-wrapper {
        min-height: 100vh;
        width: 100%;
        display: flex; align-items: center; justify-content: center;
        padding: 20px;
        box-sizing: border-box;

        /* Fondo BarberÃ­a */
        background-color: #0f172a;
        background-image: linear-gradient(#0f172a, #0f172a), repeating-linear-gradient(45deg, rgba(217, 37, 37, 0.05), rgba(217, 37, 37, 0.05) 15px, transparent 15px, transparent 30px);
    }

    .card-exito {
        background: #0f172a;
        border: 4px solid transparent;
        background-clip: padding-box, border-box;
        background-origin: padding-box, border-box;
        /* Borde Barbero */
        background-image: linear-gradient(#0f172a, #0f172a), repeating-linear-gradient(45deg, var(--barber-red), var(--barber-white) 15px, var(--barber-blue) 30px);
        
        padding: 3rem 2rem;
        border-radius: 20px;
        text-align: center;
        max-width: 450px;
        width: 100%;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Checkmark Animado */
    .check-container {
        width: 80px; height: 80px; margin: 0 auto 25px;
        background: var(--primary);
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        box-shadow: 0 0 30px var(--primary);
    }
    .checkmark { width: 40px; height: 40px; stroke: white; stroke-width: 4; stroke-linecap: round; stroke-linejoin: round; animation: draw 0.6s forwards 0.3s; stroke-dasharray: 100; stroke-dashoffset: 100; }

    h1 { color: white; margin: 0 0 15px 0; font-size: 2rem; font-family: system-ui, sans-serif; letter-spacing: 1px; text-transform: capitalize; }
    
    .mensaje-principal { color: white; font-size: 1.1rem; margin-bottom: 10px; font-weight: 500; }
    .mensaje-secundario { color: #94a3b8; font-size: 0.95rem; line-height: 1.5; margin-bottom: 30px; }

    .botones-container { display: flex; flex-direction: column; gap: 15px; }

    .btn-whatsapp {
        display: flex; align-items: center; justify-content: center; gap: 10px;
        background: #22c55e; color: white; text-decoration: none;
        padding: 16px; border-radius: 12px; font-weight: bold; font-size: 1.05rem;
        transition: 0.2s; box-shadow: 0 4px 15px rgba(34, 197, 94, 0.2);
    }
    .btn-whatsapp:hover { transform: translateY(-2px); filter: brightness(1.1); box-shadow: 0 6px 20px rgba(34, 197, 94, 0.4); }

    .btn-volver {
        display: block; color: rgba(255,255,255,0.5); text-decoration: none;
        font-size: 0.9rem; transition: 0.2s; padding: 10px;
    }
    .btn-volver:hover { color: white; }

    @keyframes draw { to { stroke-dashoffset: 0; } }
    @keyframes popIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }
</style>