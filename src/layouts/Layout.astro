---
interface Props { title: string; }
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <slot />
</body>
</html>

<style is:global>
    :root {
        --color-bg: #0a0e14;        /* Negro azulado profundo */
        --color-primary: #002395;   /* Azul Real (Royal Blue) */
        --color-secondary: #B91C1C; /* Rojo Imperial (Crimson) */
        --color-white: #f8fafc;     /* Blanco limpio */
        --font-titles: 'Bebas Neue', sans-serif;
        --font-body: 'Montserrat', sans-serif;
    }

    html, body {
        margin: 0;
        padding: 0;
        background-color: var(--color-bg);
        color: var(--color-white);
        font-family: var(--font-body);
        display: flex;
        justify-content: center;
        min-height: 100vh;
    }
</style>